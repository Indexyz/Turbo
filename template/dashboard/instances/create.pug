extends ../base

include ../../mixins/form

block dashboard
    form.uk-form-horizontal
        fieldset.uk-fieldset
            legend.uk-legend Create

        +formString('name', 'Name')
        +formCheckbox('auto-restart', 'Auto Restart')
        +formRange('memories', 'Memories (GB)', 8, 1, 0.1, 1)
        +formCheckbox('mojang-eula', 'Accept Mojang Eula?')

        a.uk-button.uk-button-primary.uk-width-1-1.uk-margin-small-bottom(id="createInstanceButton", onclick="createInstance()", href="#") Create Now

