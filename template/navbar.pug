extends ./base

block body
    nav.uk-navbar-container(uk-navbar, style="height: 48px;")
        .uk-navbar-left
            ul.uk-navbar-nav
                li.uk-active
                    a(href='/')= __("header.index")
        .uk-navbar-right
            ul.uk-navbar-nav
                if !user
                    li
                        a(href="/auth/login")= __("header.login")
                    li
                        a(href="/auth/register")= __("header.register")
                else
                    li
                        a(href="/dashboard")= user.username
                        div(uk-dropdown="offset: -16")
                            ul.uk-nav.uk-navbar-dropdown-nav
                                li
                                    a(href='/auth/logout')= __("header.logout")
    block main
